<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scraapp.HomeActivity">

    <EditText
        android:id="@+id/pickup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pick up Address"
        android:maxLines="1"
        android:textColorHint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:imeOptions="actionSearch"/>

    <Button android:id="@+id/confirm_pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM PICKUP"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickup_location"/>

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/current_location"
        app:layout_constraintEnd_toEndOf="@id/pickup_location"
        app:layout_constraintTop_toTopOf="@id/pickup_location"
        app:layout_constraintBottom_toBottomOf="@id/pickup_location" />

</android.support.constraint.ConstraintLayout>
